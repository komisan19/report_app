<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Context:</strong>
  <%= @report.context %>
</p>

<% if @report.states.count > 0 %>
  <% @report.states.each do |report| %>
    <div>
      <strong> Contributor:</strong>
      <%= report.user.name %>
        <br> <strong>State:</strong>
        <%= report.state %>
          <hr>
    </div>
    <% end %>
      <% else %>
        <h2>No state</h2>
        <% end %>

<%= link_to 'Edit', edit_report_path(@report) %> |
<%= link_to 'Back', reports_path %>
