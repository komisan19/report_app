<% if user_signed_in? %>
  <%= image_tag (current_user.image) %>
  <%= current_user.name %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
  <p id="notice">
    <%= notice %>
  </p>
  
  <h1>Reports</h1>
  
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Context</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @reports.each do |report| %>
        <tr>
          <td>
            <%= report.title %>
          </td>
          <td>
            <%= report.context %>
          </td>
          <td>
            <%= link_to 'Show', report %>
          </td>
          <td>
            <%= link_to 'Edit', edit_report_path(report) %>
          </td>
          <td>
            <%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Report', new_report_path %>
<% else %>
  <%= link_to 'Sign in', user_twitter_omniauth_authorize_path %>
<% end %>

